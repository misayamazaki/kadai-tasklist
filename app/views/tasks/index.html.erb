<h1>タスク一覧</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.id, task %> : <%= task.content %></li>
     
  <% end %>
</ul>
<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>
<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= link_to task.content, task %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>
